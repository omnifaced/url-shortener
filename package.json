{
	"name": "url-shortener",
	"description": "Service for shortening long links",
	"version": "1.0.0",
	"author": "omnifaced",
	"license": "SEE LICENSE",
	"type": "module",
	"scripts": {
		"format": "biome format --write",
		"lint": "biome lint --write",
		"type:check": "tsc --project ./tsconfig.json",
		"start": "pnpm type:check && tsx ./src/index.ts",
		"dev": "pnpm type:check && tsx watch ./src/index.ts",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"gen:types:config": "json2ts --additionalProperties false -i config/schemas/config.yaml -o src/shared/config/config.d.ts",
		"test": "node --import tsx --test --experimental-test-coverage \"src/**/*.test.ts\"",
		"test:watch": "node --import tsx --test --watch \"src/**/*.test.ts\""
	},
	"dependencies": {
		"@hono/node-server": "^1.19.6",
		"@hono/swagger-ui": "^0.5.2",
		"@hono/zod-openapi": "^1.1.5",
		"@hono/zod-validator": "^0.7.5",
		"ajv": "^8.17.1",
		"consola": "^3.4.2",
		"cron": "^4.3.4",
		"drizzle-orm": "^0.44.7",
		"hono": "^4.10.7",
		"hono-rate-limiter": "^0.4.2",
		"lru-cache": "^11.2.2",
		"postgres": "^3.4.7",
		"prom-client": "^15.1.3",
		"qr": "^0.5.3",
		"redis": "^5.10.0",
		"ua-parser-js": "^2.0.6",
		"yaml": "^2.8.1",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@types/node": "^24.10.1",
		"drizzle-kit": "^0.31.7",
		"json-schema-to-typescript": "^15.0.4",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3"
	}
}
