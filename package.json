{
	"name": "url-shortener",
	"description": "Service for shortening long links",
	"version": "2.1.0",
	"author": "omnifaced",
	"license": "SEE LICENSE",
	"type": "module",
	"scripts": {
		"format": "biome format --write",
		"lint": "biome lint --write",
		"type:check": "tsc --project ./tsconfig.json",
		"start": "pnpm type:check && tsx ./src/index.ts",
		"dev": "pnpm type:check && tsx watch ./src/index.ts",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"gen:types:config": "json2ts --additionalProperties false -i config/schemas/config.yaml -o src/shared/config/config.d.ts",
		"test": "node --import tsx --test --experimental-test-coverage \"src/**/*.test.ts\"",
		"test:watch": "node --import tsx --test --watch \"src/**/*.test.ts\""
	},
	"dependencies": {
		"@hono/node-server": "^1.19.9",
		"@hono/swagger-ui": "^0.5.3",
		"@hono/zod-openapi": "^1.2.0",
		"@hono/zod-validator": "^0.7.6",
		"ajv": "^8.17.1",
		"consola": "^3.4.2",
		"cron": "^4.4.0",
		"drizzle-orm": "^0.45.1",
		"hono": "^4.11.4",
		"hono-rate-limiter": "^0.5.3",
		"lru-cache": "^11.2.5",
		"postgres": "^3.4.8",
		"prom-client": "^15.1.3",
		"qr": "^0.5.4",
		"redis": "^5.10.0",
		"ua-parser-js": "^2.0.8",
		"yaml": "^2.8.2",
		"zod": "^4.3.5"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@types/node": "^25.0.9",
		"drizzle-kit": "^0.31.8",
		"json-schema-to-typescript": "^15.0.4",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3"
	},
	"overrides": {
		"esbuild": "0.27.2"
	},
	"pnpm": {
		"overrides": {
			"esbuild": "0.27.2"
		}
	}
}
